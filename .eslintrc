{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "plugins": [
      "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "quotes": 0,
    "func-names": 0,
    "comma-dangle": 0,
    "semi": [2, "never"],
    "new-cap": 0,
    "react/prefer-stateless-function": 0,
    "react/forbid-prop-types": 0,
    "react/require-default-props": 0,
    "react/prop-types": 1,
    "generator-star-spacing": 0,
    "no-plusplus": 0
  },
  "settings": {
      "react": {
          "pragma": "React",
          "version": "16.4.0"
      }
  }
}
